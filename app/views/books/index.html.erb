<div class="container px-5 px-sm-0">

    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
       <% end %>
      </ul>
    <% end %>

  <div class="row">

    <div class="col-md-3">
      <%= render 'users/userbook', book: @book, user: @user %>
    </div>


    <div class="col-md-8 offset-md-1">

      <div>
        <h2>Books</h2>
        <table class="table tablehover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th class="colspan=3"></th>
            </tr>
          </thead>
          <tbody class="table-group-divider">
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id), class:"link-primary" do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>


  </div>
</div>